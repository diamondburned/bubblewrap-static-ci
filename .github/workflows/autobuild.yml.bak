name: Automatically Build and Release Bubblewrap

on:
  schedule:
    - cron: '0 0 * * *'
  push:

jobs:
  update:
    name: Update Nixpkgs input
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: DeterminateSystems/nix-installer-action@main
      - uses: DeterminateSystems/magic-nix-cache-action@main

      - id: update
        run: |
          nix flake lock --update-input nixpkgs

      - id: check
        run: |
          released_version="$(gh release view --json name --jq .name)"
          nixpkgs_version="v$(nix eval --raw .#default.version)"

          needs_update=false
          if [[ "$released_version" != "$nixpkgs_version" ]]; then
            needs_update=true
          fi

          cat<<EOF > $GITHUB_OUTPUT
          released_version=$released_version
          nixpkgs_version=$nixpkgs_version
          needs_update=$needs_update
          EOF

      - id: build
        if: steps.check.outputs.needs_update == 'true'
        run: |
          nix build .#

  check:
    name: Check for new version
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: DeterminateSystems/nix-installer-action@main
      - uses: DeterminateSystems/magic-nix-cache-action@main

      - id: check
        run: |
          released_version="$(gh release view --json name --jq .name)"
          nixpkgs_version=$(nix eval --raw .#default.version)
